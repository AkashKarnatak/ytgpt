{
  "manifest_version": 3,
  "name": "YTGPT",
  "version": "1.0.1",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*"
      ],
      "js": [
        "openai.js",
        "content-script.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "*://chat.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
