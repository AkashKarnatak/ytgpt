{
  "manifest_version": 2,
  "name": "YTGPT",
  "version": "1.0.1",
  "permissions": [
    "storage",
    "*://chat.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*"
      ],
      "js": [
        "openai.js",
        "content-script.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
